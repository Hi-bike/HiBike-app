<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="400dp"
    android:background="#ffffff"
    tools:context=".activities.auth.BasicProfileActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:text="프로필 편집"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_profile_close"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/icons_x" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="안녕자전거 프로필은 게시판(위험요소, 자유게시판), 지도 등의 기능을 통해 다른 사용자들에게 표시됩니다."
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#373737"
            android:textSize="13dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/image_rounded_corner"
                android:src="@drawable/icons_user2"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="id"
            android:textColor="#373737"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_profile_nickname"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:background="@drawable/edittext_rounded_corner"
            android:gravity="left"
            android:hint="변경할 닉네임을 입력"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rounded_corner"
            android:textColor="#ffffff"
            android:text="확인" />

        <TextView
            android:id="@+id/btn_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#2C2C2C"
            android:text="로그아웃"/>

    </LinearLayout>



</LinearLayout>