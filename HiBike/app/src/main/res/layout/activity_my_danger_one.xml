<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.auth.MyDangerOne"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myPostBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:src="@drawable/icons_back3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="위험요소"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#4EA0E4"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myDangerOneTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나무가 길에 쓰러졌습니다."
                android:layout_marginBottom="10dp"
                android:textSize="25sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icons_location"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/myDangerOneRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인천광역시 서구 완정로 31"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icons_clock"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/myDangerOneTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14 2 2022"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icons_forward"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/myDangerOneContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설명 없음"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="30dp"
                >
                <ImageView
                    android:id="@+id/myDangerOneImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:rotation="90"/>

            </FrameLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>